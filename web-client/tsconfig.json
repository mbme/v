{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["dom", "es5", "es6"],
    "types": ["whatwg-fetch", "reflect-metadata"],
    "baseUrl": "./src/app"
  },
  "exclude": [
    "node_modules"
  ]
}
